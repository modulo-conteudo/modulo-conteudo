<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/adapter_className"
        android:text="Nome da disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/adapter_hourBegin"
        android:text="Horário inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_className"
        app:layout_constraintTop_toBottomOf="@id/adapter_className" />

    <TextView
        android:id="@+id/adapter_hourEnd"
        android:text="Horário fim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_className"
        app:layout_constraintTop_toBottomOf="@id/adapter_hourBegin" />

    <TextView
        android:id="@+id/adapter_classroom"
        android:text="Sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_className"
        app:layout_constraintTop_toBottomOf="@id/adapter_hourEnd" />

    <TextView
        android:id="@+id/adapter_campus"
        android:text="Campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/adapter_className"
        app:layout_constraintTop_toBottomOf="@id/adapter_classroom" />

</androidx.constraintlayout.widget.ConstraintLayout>