<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/adapter_className"
        android:text="CLASS"
        android:textSize="18sp"
        android:textColor="@color/colorDarkGrey"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/archives_img_arrow"
        />

    <ImageView
        android:id="@+id/archives_img_arrow"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/adapter_className"
        app:layout_constraintBottom_toBottomOf="@id/adapter_className"
        />

</androidx.constraintlayout.widget.ConstraintLayout>