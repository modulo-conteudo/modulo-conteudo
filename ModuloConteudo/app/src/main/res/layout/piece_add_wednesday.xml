<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/add_divWednesday"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/add_tvWednesday"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/add_tvWednesday"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wednesday"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/add_divWednesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/add_llWednesdayHour"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_tvWednesday">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_tilHourBeginWednesday"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edtBeginHourWednesday"
                android:hint="@string/horario_inicio"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:text="@string/as"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_tilHourEndWednesday"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edtEndHourWednesday"
                android:hint="@string/horario_fim"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/add_tvWednesdayQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_1"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/add_swtWednesdayQ1"
        app:layout_constraintBottom_toBottomOf="@id/add_swtWednesdayQ1"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/add_swtWednesdayQ1"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_llWednesdayHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/add_llWednesdayQ1"
        android:visibility="gone"
        android:weightSum="3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_tvWednesdayQ1"
        app:layout_constraintStart_toStartOf="parent" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_tilClassroomWednesdayQ1"
            android:hint="@string/classs"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edtClassroomWednesdayQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/add_rgClassTypeWednesdayQ1"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/add_rgTheoryWednesdayQ1"
                android:text="@string/theory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/add_rgPracticeWednesdayQ1"
                android:text="@string/practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>


    <TextView
        android:id="@+id/add_tvWednesdayQ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_2"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/add_swtWednesdayQ2"
        app:layout_constraintBottom_toBottomOf="@id/add_swtWednesdayQ2"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/add_swtWednesdayQ2"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_llWednesdayQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/add_llWednesdayQ2"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_tvWednesdayQ2"
        app:layout_constraintStart_toStartOf="parent" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_tilClassroomWednesdayQ2"
            android:hint="@string/classs"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edtClassroomWednesdayQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>


        <RadioGroup
            android:id="@+id/add_rgClassTypeWednesdayQ2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/add_rgTheoryWednesdayQ2"
                android:text="@string/theory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/add_rgPracticeWednesdayQ2"
                android:text="@string/practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

